<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmTrip">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AlternativeTravel"
        tools:layout_editor_absoluteX="-62dp"
        tools:layout_editor_absoluteY="-16dp">

        <Button
            android:id="@+id/buttonBackConfirm"
            android:layout_width="53dp"
            android:layout_height="32dp"
            android:text="Back"
            android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@+id/textViewConfrimTrip"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewConfrimTrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Confirm Trip"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewConfirmYourTrip"
            android:layout_width="306dp"
            android:layout_height="82dp"
            android:layout_marginTop="32dp"
            android:text="Confirm your trip by clicking below"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewTimeLimit" />

        <Button
            android:id="@+id/buttonCoRiders"
            android:layout_width="200dp"
            android:layout_height="59dp"
            android:layout_marginStart="16dp"
            android:text="Confirm Trip and Connect with Co-Riders"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewConfirmYourTrip" />

        <Button
            android:id="@+id/buttonCancelTrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Cancel Trip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonCoRiders" />

        <TextView
            android:id="@+id/textViewRidingWIth2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="You will be riding with:"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewConfrimTrip" />

        <TextView
            android:id="@+id/textViewRidingMembers2"
            android:layout_width="226dp"
            android:layout_height="58dp"
            android:layout_marginTop="32dp"
            android:text="Vish, Angad, Rahul, Hikaru "
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewRidingWIth2" />

        <TextView
            android:id="@+id/textViewMustConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="You must confirm before"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewRidingMembers2" />

        <TextView
            android:id="@+id/textViewTimeLimit"
            android:layout_width="170dp"
            android:layout_height="22dp"
            android:layout_marginTop="24dp"
            android:text="Time"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewMustConfirm" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>